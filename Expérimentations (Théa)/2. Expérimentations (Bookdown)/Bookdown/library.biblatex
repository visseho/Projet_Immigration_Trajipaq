  doi = {10.1111/j.1747-7379.2004.tb00231.x},
  url = {http://journals.sagepub.com/doi/10.1111/j.1747-7379.2004.tb00231.x},
  urldate = {2022-11-14},
  abstract = {Starting from discussions on the validity of the classical assimilation concept, a general model for the explanation of different structural outcomes of interethnic relations is developed. The core of the model builds on the assumption that different outcomes are the often unintended and situation-logic results of (mis-)investments in and with ethnic and non-ethnic capital. Central initial conditions of the model are group size, social and cultural distances and the availability of social capital. The model specifies the mutual relations between these three constructs. Different variants of intergenerational integration of immigrants can thus be reconstructed as special cases of a general mechanism.},
  langid = {english}
}

@article{forbushSocialMediaUse2016,
  title = {Social Media Use and Adaptation Among Chinese Students Beginning to Study in the United States},
  author = {Forbush, Eric and Foucault-Wells, Brooke},
  date = {2016},
  journaltitle = {International Journal of Intercultural Relations, published by Elsevier},
  volume = {50},
  pages = {1--12},
  abstract = {L’article de Forbush et Foucault-Wells a pour projet de comprendre l’influence des Social Network Sites (SNS) tels que Facebook dans le processus d’adaptation des étudiants chinois établis provisoirement aux Etats-Unis. Pour répondre à cette question, les auteurs se fixent pour cadre conceptuel l’étude des effets produits par l’étendue (le nombre de relations), la diversité (le type, la qualité des relations) des réseaux sociaux et le « minutage » (en pensant l’acculturation comme un processus dynamique, au cours duquel certains moments sont déterminants et d’autres moins) de leur développement sur le choix de stratégies d’acculturation (comme construire un réseau composé de Chinois, d’Etasuniens ou encore entière cosmopolite) et leurs effets concrets le degré d’adaptation (soit des indicateurs comme la maîtrise de l’anglais, le sentiment d’appartenance aux Etats-Unis et l’implication effective de l’étudiant dans la vie locale de son établissement par exemple). En somme, les deux chercheurs cherchent à comprendre comment l’usage des SNS transforment l’étendue et la diversité des réseaux sociaux, et partant, du degré d’adaptation au sein de la population qu’ils ont choisie. Pour ce faire, ils réalisent une étude quantitative impliquant la participation de 120 citoyens chinois majeurs étudiant aux Etats-Unis depuis moins d’un an. Le recrutement s’est fait par bouche-à-oreille, avec l’aide d’associations et de chercheurs. Un questionnaire en ligne de 38 questions a été soumis aux enquêtés pour mesurer leur fréquence d’utilisation de Facebook, Twitter, Instagram, Weibo et RenRen. Les résultats montrent que les SNS permettent aux étudiants de créer des réseaux sociaux diversifiés et vastes, mais influent peu sur l’adaptation au pays d’accueil, dont le degré dépend plus de la qualité des relations que de leur quantité (contrairement à ce qu’avançaient d’autres travaux ciblant des populations souhaitant s’établir à long terme dans leur pays d’accueil). En bref, l’étude souligne que la diversité des réseaux sociaux permet une meilleure adaptation et une réduction efficace du stress acculturatif (dépression, marginalisation etc.) ; c’est le cas notamment des relations entretenues avec des étudiants américains, qui tendent à offrir un soutien psychologique rassurant face à l’anxiété et l’incertitude.},
  langid = {Anglais},
  keywords = {Etude quantitative,Etudiants internationaux,PNRS,Théo},
  file = {/home/user/.local/share/zotero/data/storage/3U7C3EYG/Forbush et Foucault-Wells - 2016 - Social Media Use and Adaptation Among Chinese Stud.pdf}
}

@article{frissenInternetGreatRadicalizer2021,
  title = {Internet, the Great Radicalizer? {{Exploring}} Relationships between Seeking for Online Extremist Materials and Cognitive Radicalization in Young Adults},
  author = {Frissen, Thomas},
  date = {2021-01-01},
  journaltitle = {Computers in Human Behavior},
  shortjournal = {Computers in Human Behavior},
  volume = {114},
  pages = {106549},
  issn = {0747-5632},
  doi = {10.1016/j.chb.2020.106549},
  url = {https://www.sciencedirect.com/science/article/pii/S0747563220302995},
  abstract = {Anecdotal evidence asserts that extremist materials on the internet play a decisive role in radicalization processes. However, due to a structural absence of empirical data in the current literature, it remains uncertain if—and to what extent—online extremist materials radicalize. Therefore, the approach of the current study was two-fold. First, we explored what types of online jihadist media are pro-actively sought and consumed by young adults. Second, we investigated if and how active exposure to online jihadist media is related to cognitive radicalization, whilst taking into account one's moral disengagement, prior involvement in petty crime, and socio-demographics. Cross-sectional data analyses within a sample of Belgian young adults (n~=~1,872) show that beheading videos—the most violent and radical form of any of the jihadist materials under scrutiny—were most sought online (36\%), but were, paradoxically, the least predictive for radicalization. On the contrary, the rather static jihadist magazines were sought by a small minority (10–11\%) but were the most strongly associated with radicalization. A stepwise linear regression analysis and Structural Equation Model support our hypothesis that the process of cognitive radicalization is a complex, phasic trajectory from actively seeking out extremist materials to sympathies for violent political behaviors.},
  keywords = {Cognitive radicalization,Extremism,Information seeking,Juvenile delinquency,Moral disengagement,Propaganda},
  file = {/home/user/.local/share/zotero/data/storage/3LRVQKRV/Frissen_2021_Internet, the great radicalizer.pdf}
}

@article{gallantEtreIciLabas2010,
  title = {Être Ici et Là-Bas Tout à La Fois : Les Réseaux Sociaux En Ligne et Espaces d'appartenance Chez Les Jeunes Immigrants Au {{Québec}}},
  author = {Gallant, Nicole and Friche, Céline},
  date = {2010},
  journaltitle = {Lien social et politiques.},
  volume = {64},
  pages = {113},
  issn = {1204-3206},
  abstract = {Dans cette article, Galland et Friche souhaitent savoir : 1) comment les jeunes immigrants utilisent Internet pour maintenir des liens avec leur famille et leur réseau social dans leur région d’origine et ; 2) si le maintien d’un réseau transnational empêche l’intégration. En partant du principe que « l’identité » correspond à un sentiment d’appartenance envers un ou des groupes, et que ce sentiment est déterminé par la socialisation (soit par l’environnement familial, les groupes de pairs, les médias, le droit) et que le « réseau social » d’une personne est l’ensemble des relations qu’elle entretient (soit un capital social) ou bien le tissu d’appartenances qui agit sur les représentations de soi ; les deux autrices considèrent qu’internet permet aux migrants de conserver un contact quotidien avec leur pays d’origine. Elles avancent ensuite plusieurs hypothèses de recherche : 1) internet permet aux parents d’influencer la construction identitaire du jeune migrant ; 2) internet virtualise les sentiments d’appartenance, en les désolidarisant de leur territoire. Pour répondre à cette question, elles mènent une série d’entretiens semi-dirigés sur dix jeunes immigrés dans la région de Québec et Chaudière-Appalaches. Le recrutement est effectué dans les carrefours jeunesses emploi, grâce à un carnet d’adresse et la liste de diffusion de l’université de Laval et un peu de snowballing. Les enquêtés sont installés au Québec depuis quelques semaines à deux ans, la moitié souhaite s’installer à long terme au Canada. L’analyse des entretiens révèle que le sentiment d’appartenance au Canada, au Québec et à Québec des enquêtés est pour partie déterminé par la proportion de Québécois qu’ils fréquentent. Parallèlement, les résultats montrent que le refus d’appartenance en général. Ainsi, les jeunes qui entretiennent un fort sentiment d’appartenance envers leur pays natal sont les plus susceptibles de développer un sentiment d’appartenance local au Québec.  Friche et Galland en conclue que certains types de « représentation de soi » peuvent nuire au processus d’intégration (sentiment d’être citoyen du monde, apatride ou unique sur le plan identitaire) ; et que l’identification à un groupe secondaire abstrait continue de passer par l’identification à des autrui significatifs du groupe primaire malgré le développement des réseaux sociaux numériques et leur influence sur le maintien de réseaux sociaux transnationaux.},
  keywords = {Etude qualitative,Jeunes migrants,PNRS,Théo},
  annotation = {113},
