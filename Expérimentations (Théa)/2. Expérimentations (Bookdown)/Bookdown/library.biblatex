@article{shuvaInternetSocialMedia2021,
  title = {Internet, Social Media, and Settlement: a study on bangladeshi immigrants in Canada},
  author = {Shuva, Nafiz Zaman},
  date = {2021-01},
  journaltitle = {Canadian Journal of Information and Library Science, University of Toronto Press},
  shortjournal = {CJILS},
  volume = {43},
  number = {3},
  pages = {291--315},
  abstract = {Shuva souhaite comprendre pourquoi les réseaux sociaux numériques occupent une place grandissante dans le processus d’intégration des migrants qualifiés et de leurs familles. L’étude de l’usage des réseaux sociaux numériques parmi les populations migrantes de première génération se développe dans le champ académique. Néanmoins, peu de travaux se concentrent sur le cas des migrants qualifiés. Or, le résultat de multiples recherches conduites aux Etats-Unis, au Canada, aux Pays-Bas, en Australie, au Royaume-Uni et en Irlande met en lumière la diversité des usages d’internet en fonction du type de population migrante concernée. L’article repose sur une enquête comptabilisant 60 entretiens semi-dirigés ciblant des Bangladais majeurs, bilingues, résidents permanents ou citoyens établis dans le sud de l’Ontario. Les enquêtés ont été contactés par la méthode de la boule de neige et par un appel aux volontaires, publié dans le Bangla Mail de Toronto. A partir des entretiens, un questionnaire en ligne a été coconstruit avec les enquêtés, puis distribué grâce à plusieurs forums et associations en lien avec la communauté bangladaise. Les données recueillies ont été traitées et analysées grâce à des outils numériques comme NVivo12, SPSS et Qualtrics. Ceux-ci montrent que le nombre de migrants utilisant internet avant leur migration est en hausse depuis 2000, notamment grâce à l’aide fournie par la communauté bangladaise établie au Canada. L’étude révèle aussi que la politique de promotion de l’usage du numérique menée au Bangladesh depuis 2009 a favorisé l’intégration des migrants établis au Canada après 2011, en les familiarisant avec internet avant leur départ. Enfin, les résultats mettent en lumières différents usages d’internet : les migrants utilisent très fréquemment les Social Medias pour communiquer avec leurs familles et s’informer, LinkedIn pour trouver un emploi, les forums communautaires et gouvernementaux pour préparer et faciliter leur établissement au Canada. Shuva conclue en soulignant que les services d’accueil de l’immigration en ligne ne ne comptabilisent pas beaucoup d’activité par rapport aux forums communautaires bangladais, surtout depuis la pandémie de COVID-19. Il ajoute que la fiabilité des informations échangées sur les forums communautaires reste inconnue et que les migrants représentent une population vulnérable face à la fraude sur le marché du travail.},
  langid = {Anglais},
  keywords = {Etude mixte,Migrants économiques,PNRS,Théo},
  file = {/home/user/.local/share/zotero/data/storage/28ALAPTY/Shuva - 2021 - Internet, Social Media, and Settlement a study on.pdf}
}

