@article{agudeloItNotHow2022,
  title = {It’s {{Not How You Say It}}, {{It}}’s {{What You Say}}: {{Ambient Digital Racism}} and {{Racial Narratives}} on {{Twitter}}},
  author = {Agudelo, Felipe I. and Olbrych, Natalie},
  date = {2022-07-01},
  journaltitle = {Social Media + Society},
  volume = {8},
  number = {3},
  pages = {20563051221122441},
  publisher = {{SAGE Publications Ltd}},
  issn = {2056-3051},
  doi = {10.1177/20563051221122441},
  url = {https://doi.org/10.1177/20563051221122441},
  urldate = {2022-12-21},
  abstract = {Social media has been used to disseminate hate speech and racism. Racist opinions can be disguised through a language that may appear to be harmless; however, it can be part of a racist rhetoric toward communities of color. This type of racist communication is called Ambient Digital Racism (ADR). Through a thematic analysis, this project sought to identify and analyze social media racist discourses on Twitter in the context of George Floyd?s death. This research examined original tweets posted during the time of the protests using three known counter Black Lives Matter (BLM) hashtags, namely, \#WhiteLivesMatter, \#BlueLivesMatter, and \#AllLivesMatter. After the analysis, two themes emerged, namely, the discourse of oppressor?s reverse racism and the social criminalization of BLM. These themes described the narratives used by these groups to develop a racist digital discourse that goes unnoticed by social media regulations and policies and that leaves an open space to negotiate what constitutes acceptable race talk and what constitutes a racist discourse. It was found that both themes were grounded on White victimization, color-blind racism, and the dehumanization of BLM as a social and racial justice movement.},
  file = {/home/user/.local/share/zotero/data/storage/RWFJKISV/Agudelo_Olbrych_2022_It’s Not How You Say It, It’s What You Say.pdf}
}

@article{alencarRefugeeIntegrationSocial2017,
  title = {Refugee integration and social media: a local and experiential perspective},
  author = {Alencar, Amanda},
  date = {2017-05},
  journaltitle = {Information, Communication \& Society, Informa UK Limited, trading as Taylor \& Francis Group},
  volume = {21},
  number = {11},
  pages = {1588--1603},
  abstract = {Alencar souhaite comprendre : 1) Comment les migrants utilisent les Social Medias ; 2) comment ces derniers contribuent au processus d’intégration ; 3) quelles sont les perceptions de l’intégration des réfugiés dans leur contexte d’accueil ; et finalement 4) Comment ses perceptions influencent leurs usages des Social Medias. Pour analyser son objet de recherche, elle adopte une approche multidimensionnelle dans laquelle les modalités du processus d’intégration des migrants dépendent de facteurs interdépendants tels que : 1) la conjoncture historique globale et locale ; 2) la perception de ce qu’est l’intégration par les migrants ; et 3) les politiques migratoires du pays d’accueil. Son étude repose sur 18 entretiens semi-dirigés d’une heure environ, menés dans le centre d’accueil pour les demandeurs d’asile d’Amsterdam entre aout et septembre 2016. La population est majoritairement syrienne, masculine, diplômée du supérieur, adulte et installée au Pays-Bas depuis moins d’un an. Les entretiens ont été réalisés grâce à la méthode de la boule de neige et l’aide d’un indicateur syrien. Les témoignages recueillis ont été analysés thématiquement par codage ouvert (perceptions de l’intégration) axial (recherche de variances dans le sens des perceptions) et sélectif (comparaison des différentes catégories de sens). Les résultats de l’étude montrent que les participants préfèrent les Social Medias aux autres applications d’internet, tout en étant conscients du manque de fiabilité de l’information et de l’aliénation provoquée par un usage trop fréquent. Si le numérique n’aide pas vraiment les migrants à trouver un travail, un logement, se soigner ou se former, celui-ci leurs permettent de construire et entretenir une myriade de liens sociaux complexes (« bridges, bonds and links ») les aidant indirectement dans leur établissement au Pays-Bas (encaisser l’anxiété, se faire des amis, s’orienter vers de nombreux services etc.). L’apprentissage de la langue est facilité par l’usage de plateformes comme YouTube. Les réseaux sociaux permettent également aux migrants de se protéger (démarches de demande d’asile, protection juridique) à travers la création de liens institutionnels avec les plateformes en ligne du gouvernement néerlandais. Cependant, malgré la politique inclusive des Pays-Bas en matière d’immigration, la majorité des migrants considèrent que l’adaptation est un effort unilatéral à fournir pour les migrants.},
  langid = {Anglais},
  keywords = {Etude qualitative,PNRS,Réfugiés},
  file = {/home/user/.local/share/zotero/data/storage/UR92RLP3/Alencar - 2017 - Refugee integration and social media a local and .pdf}
}

@article{archerSocialIntegrationSystem1996,
  title = {Social {{Integration}} and {{System Integration}}: {{Developing}} the {{Distinction}}},
  shorttitle = {Social {{Integration}} and {{System Integration}}},
  author = {Archer, Margaret},
  date = {1996-11-01},
  journaltitle = {Sociology},
  volume = {30},
  number = {4},
  pages = {679--699},
  publisher = {{SAGE Publications Ltd}},
  issn = {0038-0385},
  doi = {10.1177/0038038596030004004},
  url = {https://doi.org/10.1177/0038038596030004004},
  urldate = {2023-04-10},
  abstract = {This paper underlines the importance of the distinction between `social' and `system' integration (agency and structure) introduced by David Lockwood in 1964. Its four sections (i) examine the original difficulty of maintaining any distinction between the `parts' of society and its `people' against the social ontology of Individualism whose proponents argued that the former must always be reduced to the latter as individuals were the ultimate constituents of society, (ii) shows how collectivist opposition held `systemic factors' to be indispensable in sociological explanations, but could not substantiate their ontological status against the charge of reification whilst empiricism held sway, (iii) explores how once the individualist/collectivist debate was superseded, Lockwood's distinction was redefined in structuration theory, where insistence on treating structure and agency as mutually constitutive effectively denied their independent variation and thus reduced the `social' and the `systemic' to differences in the scale of social practices; (iv) argues that social realism's ontology, in which `structures' and `agents' belong to different emergent strata of social reality, avoids reducing one to the other or eliding the two. Instead it supplies the ontological grounding for Lockwood's distinction and enables it to be developed into an explanatory programme - analytical dualism - whose central tenet is the need to explore the interplay between these two irreducible constituents of social reality in order to account for why things are `so and not otherwise' and in a manner which is of direct utility to practical analysts of society.},
  langid = {english},
  file = {/home/user/.local/share/zotero/data/storage/ZY82LGQT/Archer - 1996 - Social Integration and System Integration Develop.pdf}
}

