@article{ihejirikaMovingMediaExploration2021,
  title = {Moving with the media: An exploration  of how migrant communities in  New Zealand use social media},
  author = {Ihejirika, Kingsley T. and Krtalic, Maja},
  date = {2021},
  journaltitle = {Journal of Librarianship and Information Science},
  volume = {53},
  number = {1},
  pages = {50--61},
  abstract = {Dans cet article Ihejirika et Krtalic veulent savoir : 1) quels sont les raisons pour les personnes migrantes d’utiliser les médias sociaux durant leur migration ? 2) cet usage change-t-il pendant les différentes phases de la migration ? 3) Comment sont gérées les informations personnelles des personnes migrantes durant leur migration ? 4) Les personnes migrantes utilisent-elles les bibliothèques durant leur migration ? Leur recherche prend pour cadre les définitions suivantes : 1) La migration implique pour une personne ou un groupe de traverser des limites spatiales et changer de résidence ; 2) Le processus d’établissement se déroule en trois étapes de manière cyclique : a) une phase de préparation antérieure à la migration ; b) une phase d’installation pendant laquelle la personne migrante produit des efforts pour s’intégrer dans son pays d’accueil ; c) une phase au cours de laquelle la personne migrante peut décrypter les informations provenant du pays d’accueil et faire un retour réflexif sur sa préparation et son installation ; et enfin 3) Les médias sociaux sont un ensemble de plateformes en ligne permettant la création, l’échange et le commentaire de contenus générés par les utilisateurs. Leur enquête repose sur un questionnaire distribué parmi trois communautés migrantes en Nouvelle Zélande. Les résultats montrent que : 1) les personnes migrantes s’aident des médias sociaux pour prendre la décision de partir à l’étranger ; 2) elles collectent des informations grâce aux médias sociaux durant leur établissement à l’étranger ; 3) elles utilisent les médias sociaux pour communiquer avec leurs familles restées au pays ; 4) elles utilisent les médias sociaux pour : a) construire de nouvelles relations ; b) récupérer des informations ; c) réseauter ; d) participer à la politique de leur pays d’origine ; e) apprendre la langue et les usages culturels du pays d’accueil ; 5) les personnes migrantes font peu de cas de la gestion de leurs informations personnelles sur les médias sociaux ; et enfin 6) elles visitent des bibliothèques et suivent leur activité sur les médias sociaux. Les auteurs concluent leur article en relevant que dans la phase de transition, les personnes migrantes utilisent les médias sociaux pour prendre la décision de partir à l’étranger. Pendant la phase d’installation, les médias sociaux les aident à s’intégrer rapidement et à réduire l’anxiété générée par la rupture avec le pays d’origine. Une fois établies, les personnes migrantes utilisent les médias sociaux pour rester connecter avec leur famille et amis restés au pays. Enfin, les médias sociaux et les bibliothèques offrent un espace protégé (anonymat ou cadre sécurisé) pour les personnes migrantes pour découvrir la culture de leur pays d’accueil sans s’exposer au jugement et la stigmatisation des personnes natives ou établies depuis plus longtemps.},
  langid = {Anglais},
  keywords = {Etude quantitative,Migrants économiques,PNRS,Théo},
  file = {/home/user/.local/share/zotero/data/storage/9LTFVXN2/Ihejirika et Krtalic - 2021 - Moving with the media An exploration  of how migr.pdf}
}

