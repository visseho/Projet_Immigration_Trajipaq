@incollection{kenneallyAntisocialMediaUnderstanding2022,
  title = {Anti-Social {{Media}}. {{Understanding}} the {{Role}} of {{Social Media}} in {{Reinforcing Obstacles}} to {{Migrant Integration}}},
  booktitle = {Information and {{Communications Technology}} in {{Support}} of {{Migration}}},
  author = {Kenneally, Sophie and Bianchi, Serena and Nanis, Younes Ismaeel},
  editor = {Akhgar, Babak and Hough, Karen Latricia and Abdel Samad, Yara and Saskia Bayerl, Petra and Karakostas, Anastasios},
  date = {2022},
  pages = {33--49},
  publisher = {{Springer International Publishing}},
  location = {{Cham}},
  doi = {10.1007/978-3-030-93266-4_3},
  url = {https://doi.org/10.1007/978-3-030-93266-4_3},
  abstract = {Migrant integration into host societies has been accompanied by persisting and multifaceted challenges that have been revisited under an array of research lenses. Yet, as the ways in which we socialise increasingly move online, new research gaps emerge around the nature of these challenges today. This chapter explores the extent to which social media can reinforce traditional obstacles to migrant integration, considering, in particular, how social media algorithms risk mirroring segregation and a lack of social mixing in the physical world. In the same light, the authors will consider how social media can create echo chambers for (mis)perceptions of host communities, with due regard to how traditional influencing factors, such as age or gender, might impact the extent of this phenomenon. The authors build upon their own research conducted with migrants along two key migration routes to Europe in order to cast new light on the relationship between migration, integration and social media. A proposed methodology is outlined for deeper research into the questions addressed by the chapter, encouraging a critical step towards understanding the challenges of migrant integration today.},
  isbn = {978-3-030-93266-4}
}

@article{kietzmannSocialMediaGet2011,
